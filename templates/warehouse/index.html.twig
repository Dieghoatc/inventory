{% extends 'base.html.twig' %}

{% block title %}{{ 'warehouse.index.title'|trans }}{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-header">
            {{ 'warehouse.index.title'|trans }}
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                    <tr>
                        <th width="5%">#</th>
                        <th>Name</th>
                        <th>Options</th>
                    </tr>
                    </thead>
                    <tbody>
                        {% for warehouse in warehouses %}
                        <tr>
                            <td>{{ warehouse.id }}</td>
                            <td>{{ warehouse.name }}</td>
                            <td>
                                <a href="{{ path('warehouse_warehouse_edit', {'warehouse': warehouse.id}) }}" class="btn btn-sm btn-success"><i class="fas fa-edit"></i> {{ 'edit'|trans }}</a>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
