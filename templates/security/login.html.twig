{% extends 'base.html.twig' %}

{% block title %}{{ 'security.login.title'|trans }}{% endblock %}

{% block body %}
    <body class="bg-dark">
        <div class="container">
            <div class="card card-login mx-auto mt-5">
                <div class="card-header">{{ 'log_in'|trans }}</div>
                <div class="card-body">
                    <form action="{{ path('login') }}" method="post">
                        <div class="form-group">
                            <div class="form-label-group">
                                <input type="text" id="username" class="form-control" placeholder="{{ 'security.login.form.username'|trans }}"  name="_username" value="{{ last_username }}" required="required"/>
                                <label for="username">{{ 'security.login.form.username'|trans }}</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="form-label-group">
                                <input type="password" id="password" name="_password" class="form-control" placeholder="{{ 'security.login.form.password'|trans }}" required="required"/>
                                <label for="password">{{ 'security.login.form.password'|trans }}</label>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">{{ 'log_in'|trans }}</button>
                    </form>
                </div>
            </div>
        </div>
        <script src="{{ asset('build/app.js') }}"></script>
        {% block javascripts %}{% endblock %}
    </body>
{% endblock %}
