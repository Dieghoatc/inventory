{% extends 'base.html.twig' %}

{% block title %}{{ 'user.index.title'|trans }}{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-header">
            {{ 'user.index.title'|trans }}
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                    <tr>
                        <th width="5%">#</th>
                        <th>{{ 'user.index.name'|trans }}</th>
                        <th>{{ 'user.index.email'|trans }}</th>
                        <th>{{ 'user.index.rol'|trans }}</th>
                        <th>{{ 'options'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.id }}</td>
                            <td>{{ user.name }}</td>
                            <td>{{ user.email }}</td>
                            <td>Rol</td>
                            <td>
                                <a href="{{ path('user_user_edit', {user:user.id}) }}" class="btn btn-sm btn-success">
                                    <i class="fas fa-edit"></i> {{ 'edit'|trans }}
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
